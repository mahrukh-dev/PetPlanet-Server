	.contacts2 {
		align-items: center;
		display: flex;
		margin-left: 0.1rem;
		width: calc(100% - 0.1rem);
	}

	.image-2 {
		background-image: url('/images/asteriq.jpeg');
		background-position: -18rem -6.4rem;
		background-size: 70% 75%;
